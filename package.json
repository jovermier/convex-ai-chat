{
  "name": "flex-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "./start.sh",
    "stop": "./stop.sh",
    "dev": "npm-run-all --parallel dev:frontend convex:start",
    "dev:frontend": "vite",
    "dev:backend": "convex dev --local --once",
    "build": "vite build",
    "check": "biome check src convex scripts && tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "lint": "biome check --write src convex scripts && tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "lint:check": "biome check src convex scripts",
    "format": "biome format --write src convex scripts",
    "format:check": "biome format src convex scripts",
    "test": "playwright test",
    "test:install": "playwright install --with-deps",
    "test:ui": "playwright test --ui",
    "convex:start": "./scripts/setup-convex.sh",
    "convex:stop": "docker compose -f docker-compose.convex.yml down",
    "convex:deploy": "convex deploy --yes",
    "convex:logs": "docker compose -f docker-compose.convex.yml logs -f",
    "convex:status": "docker compose -f docker-compose.convex.yml ps"
  },
  "dependencies": {
    "@ai-sdk/openai": "2.0.9",
    "@convex-dev/agent": "0.3.2",
    "@convex-dev/auth": "0.0.90",
    "@tailwindcss/typography": "0.5.19",
    "@tiptap/core": "3.15.3",
    "@tiptap/extension-character-count": "3.15.3",
    "@tiptap/extension-placeholder": "3.15.3",
    "@tiptap/markdown": "3.15.3",
    "@tiptap/pm": "3.15.3",
    "@tiptap/react": "3.15.3",
    "@tiptap/starter-kit": "3.15.3",
    "ai": "5.0.29",
    "clsx": "2.1.1",
    "convex": "1.31.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "2.0.7",
    "tailwind-merge": "3.4.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "25.0.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "autoprefixer": "~10",
    "dotenv": "17.2.3",
    "globals": "17.0.0",
    "npm-run-all": "4.1.5",
    "openai": "6.16.0",
    "postcss": "~8",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  }
}
